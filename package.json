{
    "name": "sonification",
    "version": "0.1.0",
    "description": "library that provides sonification primitives to make data accessible.",
    "source": "src/sonification.ts",
    "exports": {
        "require": "./dist/sonification.cjs",
        "default": "./dist/sonification.modern.js"
    },
    "main": "./dist/sonification.cjs",
    "module": "./dist/sonification.module.js",
    "unpkg": "./dist/sonification.umd.js",
    "license": "MIT",
    "files": [
        "dist",
        "src"
    ],
    "scripts": {
        "build": "microbundle",
        "watch:build": "microbundle watch",
        "test": "mocha",
        "watch:test": "mocha --watch",
        "dev": "concurrently 'npm:watch:*'",
        "lint": "eslint '*/**/*.{js,ts}' --quiet --fix"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,ts}": [
            "eslint --fix"
        ]
    },
    "dependencies": {
        "@types/node": "^16.11.6",
        "vega": "^5.21.0",
        "vega-embed": "^6.20.0"
    },
    "devDependencies": {
        "@semantic-release/exec": "^6.0.1",
        "@semantic-release/git": "^10.0.0",
        "@types/chai": "^4.2.22",
        "@types/mocha": "^9.0.0",
        "@typescript-eslint/eslint-plugin": "^5.2.0",
        "@typescript-eslint/parser": "^5.2.0",
        "chai": "^4.3.4",
        "eslint": "^8.1.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "microbundle": "^0.14.1",
        "mocha": "^9.1.3",
        "prettier": "^2.4.1",
        "semantic-release": "^18.0.0",
        "ts-node": "^10.4.0",
        "typescript": "^4.4.4"
    }
}
